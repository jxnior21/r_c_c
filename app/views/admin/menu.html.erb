<article>
	<div class="container">
	  <header class="row">
			<div class="col"></div>
			<div class="col"></div>
			<div class="col-1">
				<%= link_to('Logout', admin_logout_path, :class => 'col-12 adminlink') %>
			</div>
	  </header>
  </div>
	<div class="container text-center">
	  <header class="row">
	  	<h1 class="col-12">Renovacion Catolica Caristmatica</h1>
	  </header>
  </div>
  <div class="row">
    <%= link_to 'Principal', root_path, :class => 'btn' %>
	</div>
	<div class="container-fluid text-center title">
		<div class="row">
		  <h2 class="col">Administrative menu</h2>
	  </div>
	</div>
  <div class="text-center">
    <% if !flash[:notice].blank? %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
    <% end  %>
  </div>
	<div class="container text-center">
		<h2>Eventos</h2>
	</div>
	<div class="container text-center">
		<div class="row">
	  <% @events.each do |event| %>
			<section class="col-12 col-sm-3">
				<h3><%= event.title %></h3>
				<p class="text-justify text-center">
				<em>Fecha</em>: <%= event.date %>
				<br />
				<br />
				<em>Description</em>: <%= event.description %><br /><br />
				<div class="row">
	        <div class="col-6 col-sm-6">
						<%= link_to 'Edit', edit_event_path(event), :class => 'btn' %>
				  </div>
					<!-- Delete Modal button -->
					<div class="col-6 col-sm-6">
						<button type="button" title="Delete" class="btn" data-toggle="modal" data-target="#DeleteModal-<%= event.id %>">
						  Delete
						</button>
					</div>
				</div>
				<!-- Delete Modal -->
				<div class="modal fade" id="DeleteModal-<%= event.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
				  <div class="modal-dialog" role="document">
				    <div class="modal-content">
				      <div class="modal-header">
				        <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
				        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
				          <span aria-hidden="true">&times;</span>
				        </button>
				      </div>
				        <p>Are you sure you wanna permanetly delete this event?</p><br />
				        <p>Name: <%= event.title %></p><br />
								<p>Date: <%= event.date %></p><br />
				      <div class="modal-footer">
								<%= link_to 'Cancel', admin_path, :'data-dismiss' => "modal", :class => 'btn' %>
								<%= link_to 'Delete', event_path(event), :method => 'delete', :class => 'btn' %>
				      </div>
				    </div>
				  </div>
				</div>
	    </section>
		<% end %>
	  </div>
    <div class="row">
			<div class="col-12">
				<%= link_to 'Add new event',  new_event_path, :class => 'btn' %>
			</div>
		</div>
    <div class="text-center">
			<h2>Futuro eventos</h2>
		</div>
		<div class="table-responsive">
			<table class="table">
				<caption class="text-center">Futuro eventos</caption>
			  <thead>
			    <tr>
			      <th>Fecha</th>
			      <th>Evento</th>
						<th>Typo</th>
            <th colspan="2">Actions</th>
			    </tr>
			  </thead>
			  <tbody>
					<% @future_events.each do |event| %>
			    <tr class="thover">
			      <th><%= event.date %></th>
			      <td><%= event.title %></td>
						<td><%= event.kind %></td>
            <td>
							<div class="row">
                <div class="col">
                  <%= link_to 'Edit', edit_future_event_path(event) %>
                </div>
								<div class="col">
                  <%= link_to 'delete', future_event_path(event), :method => 'delete' %>
                </div>
							</div>
            </td>
			    </tr>
			    <% end %>
				</tbody>
			</table>
		</div>
		<div class="row text-center">
      <div class="col-12">
        <%= link_to 'Add new future event', new_future_event_path, :class => 'btn' %>
      </div>
	  </div>
	</div>
	<div class="container-fluid title">
		<div class="row">
			<footer class="col">
				<p>Â©2017 my website</p>
			</footer>
		</div>
  </div>
</article>
