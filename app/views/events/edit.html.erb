<article>
  <div class="container-fluid text-center">
    <header class="row">
    	<h1 class="col-12">Renovacion Catolica Carismatica Hispana - Orlando</h1>
    </header>
  </div>
  <nav class="container text-center">
  	<div class="row">
  		<div class="col col-sm-2"></div>
  		<div class="col col-sm-8">
  			<div class="row">
  				<%= link_to 'Menu', admin_path, :class => 'col col-sm-3' %>
  			</div>
  		</div>
  		<div class="col col-sm-2"></div>
  	</div>
  </nav>
  <div class="container-fluid text-center title">
		<div class="row">
		  <h2 class="col">Update event</h2>
	  </div>
	</div>
  <div class="container text-center">
    <div class="row form-group">
      <div class="col-sm-4"></div>
      <div class="col-12 col-sm-4">
        <%= form_for (@event) do |f| %>
          <strong>Nombre: </strong><br />
          <%= f.text_field(:title, :class => 'form-control') %><br />
          <strong>Fecha: </strong><br />
          <%= f.text_field(:date, :class => 'form-control') %><br />
          <strong>Description: </strong><br />
          <%= f.text_area(:description, :class => 'form-control') %><br />
          <%= f.submit "Update event", :class => 'btn' %>
        <% end %>
      </div>
      <div class="col-sm-4"></div>
    </div>
  </div>
  <div class="container-fluid title">
		<div class="row">
			<footer class="col">
