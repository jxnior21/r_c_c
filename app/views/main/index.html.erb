				<% price = event.price.to_i %></p>
				<% else %>
				<em>Precio</em>: Gratis</p>
				<% end %>
				<% sl = event.capacity - event.customers.size %>
				<% if sl > 0 %>
				<button class="badge-btn">
					<em>Espacio disponibles</em> <span class="badge badge-light"><%= sl %></span>
				</button><br /><br />
				<% else %>
				<button class="badge-btn">
					<em>Espacio disponibles</em> <span class="badge badge-light">0</span>
				</button><br /><br />
				<% end %>
				<!-- Show event Modal button -->
				<div class="row">
					<div class="col-12">
						<button type="button" title="Mostrar evento" class="button" data-toggle="modal" data-target="#ShowModal-<%= event.id %>">
							Mostrar evento
						</button>
					</div>
					<% if event.visible %>
					<div class="col-12">
						<%= button_to "Registrarse", selected_event_path(event.id), :class => 'button submit', method: 'get', remote: true %>
					</div>
					<% else %>
					<div class="col-12">
						<button type="button" class="closed-button">
							Registro cerrado
						</button>
					</div>
					<% end %>
				</div>
				<!-- Show event Modal -->
				<div class="modal fade" id="ShowModal-<%= event.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
				  <div class="modal-dialog modal-dialog-centered" role="document">
				    <div class="modal-content">
				      <div class="modal-header">
